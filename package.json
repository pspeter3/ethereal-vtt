{
  "name": "ethereal-vtt",
  "private": true,
  "description": "Minimal peer to peer virtual table top",
  "scripts": {
    "build": "NODE_ENV=production webpack --mode production",
    "fmt": "prettier --write '*.{md,ts}' '{.github,doc,src}/**/*'",
    "start": "webpack-dev-server",
    "test": "npm run test:style && npm run test:lint && npm run test:spec",
    "test:lint": "eslint '*.ts' 'src/**/*'",
    "test:spec": "jest --ci",
    "test:style": "prettier --check '*.{md,ts}' '{.github,doc,src}/**/*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/ethereal-vtt.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pspeter3/ethereal-vtt/issues"
  },
  "homepage": "https://github.com/pspeter3/ethereal-vtt#readme",
  "dependencies": {
    "peerjs": "^1.3.1",
    "pixi-viewport": "^4.13.2",
    "pixi.js": "^5.3.3",
    "preact": "^10.4.8",
    "preact-feather": "^4.1.0",
    "tailwindcss": "^1.8.2",
    "tslib": "^2.0.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/preact": "^2.0.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^26.0.13",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "css-loader": "^4.2.2",
    "eslint": "^7.8.1",
    "eslint-config-preact": "^1.1.1",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "html-webpack-plugin": "^4.4.1",
    "jest": "^26.4.2",
    "mini-css-extract-plugin": "^0.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/recommended",
      "preact"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "jsx-a11y"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/tools/jest.setup.ts"
    ],
    "preset": "ts-jest"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
